{
    "extends": [
        "next/core-web-vitals"
    ],
    "rules": {
        "prefer-const": "warn",
        "no-var": "warn",
        "react-hooks/exhaustive-deps": "warn",
        "react/no-unescaped-entities": "warn"
    },
    "overrides": [
        {
            "files": [
                "**/*.cy.ts",
                "**/*.cy.js"
            ],
            "extends": [
                "plugin:cypress/recommended"
            ],
            "rules": {
                "cypress/no-unnecessary-waiting": "warn"
            }
        }
    ]
}