# AI Readiness App - Production Environment Variables

# Domain Configuration (Canonical)
NEXT_PUBLIC_DOMAIN=aiblueprint.k12aiblueprint.com
NEXT_PUBLIC_APP_URL=https://aiblueprint.k12aiblueprint.com
NEXT_PUBLIC_BASE_URL=https://aiblueprint.k12aiblueprint.com
NEXTAUTH_URL=https://aiblueprint.k12aiblueprint.com

# OpenAI Configuration (CRITICAL for AI features)
OPENAI_API_KEY=your_production_openai_key
ENABLE_ADVANCED_AI=true
AI_CONTENT_GENERATION_TIMEOUT=15000
PDF_GENERATION_TIMEOUT=30000

# Database Configuration
DATABASE_URL=your_production_database_url
SUPABASE_URL=your_production_supabase_url
SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_key

# Authentication
NEXTAUTH_SECRET=your_secure_nextauth_secret

# Analytics & Monitoring
ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# AI Features Configuration
ENABLE_HISTORICAL_ANALYSIS=true
ENABLE_PEER_BENCHMARKING=true
ENABLE_ENHANCED_PDF=true
ENABLE_AI_IMAGE_GENERATION=false

# Policy Updates System Configuration
POLICY_UPDATES_AUTO_REDLINE=true
POLICY_UPDATES_NOTIFICATIONS=true
POLICY_UPDATES_DRY_RUN=false

# Policy Update Notifications
POLICY_UPDATE_EMAIL_ENABLED=true
POLICY_UPDATE_SLACK_ENABLED=false
POLICY_UPDATE_WEBHOOK_URL=https://your-app.com/webhooks/policy-updates

# Framework Monitoring Intervals (minutes)
FERPA_CHECK_INTERVAL=360
COPPA_CHECK_INTERVAL=360
PPRA_CHECK_INTERVAL=720
