{
  "github": {
    "silent": false
  },
  "build": {
    "env": {
      "NEXT_BUILD_ID": "$VERCEL_GIT_COMMIT_SHA",
      "DISABLE_BUILD_CACHE": "1",
      "HUSKY": "0"
    }
  },
  "installCommand": "rm -rf .next && npm ci",
  "crons": [
    {
      "path": "/api/cron/trial-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/re-engagement",
      "schedule": "0 10 * * *"
    }
  ]
}