# AI Readiness App Environment Variables

# ===== CORE APP CONFIGURATION =====
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_URL="https://aiblueprint.educationaiblueprint.com"  # Production URL

# ===== OPENAI API =====
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_ORG_ID="org-your-organization-id"

# ===== STRIPE PAYMENT PROCESSING =====
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
STRIPE_PRICE_EDU_MONTHLY_199="price_your-edu-monthly-price-id"
STRIPE_PRICE_EDU_YEARLY_1990="price_your-edu-yearly-price-id"  # Optional for yearly billing
STRIPE_PRICE_JEREMY_CONSULTATION="price_from_stripe_create_jeremy_script"

# ===== SUPABASE DATABASE (REQUIRED) =====
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"  # Required
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"  # Required
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"  # Required for server-side operations
NEXT_PUBLIC_JEREMY_HEADSHOT_URL="https://northpathstrategies.org/your-headshot-path.jpg"  # Optional override for founder image

# If using Prisma with Supabase (optional)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:6543/postgres?pgbouncer=true&connection_limit=1"  # Use Supavisor PRISMA URL

# ===== EMAIL SERVICE (SendGrid) =====
SENDGRID_API_KEY="SG_your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
SENDGRID_FROM_NAME="AI Readiness Assessment"

# ===== ANALYTICS =====
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_ENABLE_ANALYTICS_IN_DEV="false"

# ===== AI ANALYSIS & SCORING =====
# Used for advanced AI analysis and recommendations
AI_ANALYSIS_MODEL="gpt-4"
AI_TEMPERATURE="0.7"
AI_MAX_TOKENS="2000"

# ===== FILE UPLOAD & STORAGE =====
# For document uploads in comprehensive assessments
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES=".pdf,.doc,.docx,.txt"

# ===== RATE LIMITING =====
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes

# ===== SECURITY =====
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-jwt-secret-here"

# ===== WEBHOOK ENDPOINTS =====
# For real-time updates and integrations
WEBHOOK_SECRET="your-webhook-secret"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/your/slack/webhook"

# ===== SLACK AUTOMATION =====
# Enable Slack notifications and automation
POLICY_UPDATE_SLACK_ENABLED="true"
POLICY_UPDATE_SLACK_CHANNEL="#ai-readiness-community"

# Cron job authentication for automated posts
CRON_SECRET="your-secure-cron-secret-for-automation"

# ===== DEVELOPMENT =====
NODE_ENV="development"
LOG_LEVEL="info"
DEBUG_MODE="false"
